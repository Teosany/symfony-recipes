{% for key, messages in app.flashes %}
    <div class="max-w-2xl mx-auto prose">

        <div class="p-4 mb-4 text-sm text-green-800 rounded-lg bg-green-50 dark:bg-gray-800 dark:text-green-400" role="alert">
            <span class="font-medium">
                                {{ messages | join('. ') }}
            </span>
        </div>
    </div>

{% endfor %}