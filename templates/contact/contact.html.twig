{% extends 'base.html.twig' %}

{% block title %}Nous contacter{% endblock %}

{% block body %}

    <div class="max-w-lg mx-auto prose">
        <h1 class="text-5xl">Nous contacter</h1>

        {{ form_start(form) }}

        <div class="grid md:grid-cols-3 md:gap-3">

            <div class="relative z-0 w-full mb-1 group">{{ form_row(form.name) }}</div>
            <div class="relative z-0 w-full mb-1 group">{{ form_row(form.email) }}</div>
            <div class="relative z-0 w-full mb-1 group">{{ form_row(form.service) }}</div>

        </div>

        {{ form_end(form) }}

    </div>

{% endblock %}
